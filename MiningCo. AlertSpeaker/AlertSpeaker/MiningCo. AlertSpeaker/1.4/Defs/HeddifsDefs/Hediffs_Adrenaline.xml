<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef Name="HediffBase" Abstract="True">
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.12, 0.80, 0.00)</defaultLabelColor>
  </HediffDef>

  <HediffDef ParentName="HediffBase">
    <defName>HediffAdrenalineSmall</defName>
    <label>small adrenaline boost</label>
    <description>I heard the alarm. Let's see what happens.</description>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>7000</min>
          <max>8000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.03</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="HediffBase">
    <defName>HediffAdrenalineMedium</defName>
    <label>medium adrenaline boost</label>
    <description>The colony is under attack, let's defend our lives! All to the combat posts!</description>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>
          <min>7000</min>
          <max>8000</max>
        </disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.06</offset>
          </li>
        </capMods>
        <painFactor>0.97</painFactor>
      </li>
    </stages>
  </HediffDef>

</Defs>