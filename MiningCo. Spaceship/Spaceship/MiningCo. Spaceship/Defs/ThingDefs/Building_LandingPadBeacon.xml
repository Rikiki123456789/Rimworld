  <ThingDef ParentName="BuildingBase">
    <defName>LandingPadBeacon</defName>
    <label>landing pad beacon</label>
    <description>Beacon used by ships to land on.</description>
    <thingClass>Spaceship.Building_LandingPadBeacon</thingClass>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Building/LandingPadBeacon/LandingPadBeacon</texPath>
