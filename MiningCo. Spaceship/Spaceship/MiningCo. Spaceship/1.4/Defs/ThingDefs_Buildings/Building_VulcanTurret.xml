<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>VulcanTurret</defName>
    <label>vulcan turret</label>
    <description>An advanced gun mounted on MiningCo. military spaceships to protect squads during their deployment. Local tribes fear it as they believe it to be a tool forged by the Fire god himself. Mercenaries... well, the lucky ones who survived the first volley can report its efficiency.</description>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Security/VulcanTurret/DummyTexture</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>PawnState</altitudeLayer>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0</Flammability>
      <WorkToMake>3000</WorkToMake>
    </statBases>
    <size>(1,1)</size>
    <rotatable>true</rotatable>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
    </comps>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0</fillPercent>
    <hasTooltip>true</hasTooltip>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <specialDisplayRadius>25.9</specialDisplayRadius>
    <building>
      <combatPower>45</combatPower>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>Gun_VulcanTurret</turretGunDef>
      <turretBurstCooldownTime>4.0</turretBurstCooldownTime>
      <claimable>false</claimable>
      <deconstructible>false</deconstructible>
    </building>
  </ThingDef>

</Defs>